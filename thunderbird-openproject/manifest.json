{
  "manifest_version": 2,
  "name": "Thunderbird OpenProject",
  "description": "Extension to add tasks to OpenProject",
  "version": "0.4",
  "author": "Rui Pedro Henriques",
  "applications": {
    "gecko": {
      "id": "thunderbird-openproject@addons.thunderbird.net",
      "strict_min_version": "68.0",
      "strict_max_version": "102.*"
    }
  },
  "message_display_action": {
    "default_popup": "popup_message.html",
    "default_title": "Add Task",
    "default_icon": "images/icon_32.png"
  },
  "compose_action": {
    "default_popup": "popup_compose.html",
    "default_title": "Add Task",
    "default_icon": "images/icon_32.png",
    "default_area": "maintoolbar"
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "permissions": ["storage", "messagesRead"],
  "icons": {
    "64": "images/icon.png",
    "32": "images/icon_32.png",
    "16": "images/icon_16.png"
  }
}
